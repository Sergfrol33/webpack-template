{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "es6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "target": "es5",
    "baseUrl": "./",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}